{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/flanksource/incident-commander/api/v1/permission",
  "$ref": "#/$defs/Permission",
  "$defs": {
    "FieldsV1": {
      "properties": {},
      "additionalProperties": false,
      "type": "object"
    },
    "Items": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "ManagedFieldsEntry": {
      "properties": {
        "manager": {
          "type": "string"
        },
        "operation": {
          "type": "string"
        },
        "apiVersion": {
          "type": "string"
        },
        "time": {
          "$ref": "#/$defs/Time"
        },
        "fieldsType": {
          "type": "string"
        },
        "fieldsV1": {
          "$ref": "#/$defs/FieldsV1"
        },
        "subresource": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "NamespacedNameIDSelector": {
      "properties": {
        "id": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ObjectMeta": {
      "properties": {
        "name": {
          "type": "string"
        },
        "generateName": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        },
        "selfLink": {
          "type": "string"
        },
        "uid": {
          "type": "string"
        },
        "resourceVersion": {
          "type": "string"
        },
        "generation": {
          "type": "integer"
        },
        "creationTimestamp": {
          "$ref": "#/$defs/Time"
        },
        "deletionTimestamp": {
          "$ref": "#/$defs/Time"
        },
        "deletionGracePeriodSeconds": {
          "type": "integer"
        },
        "labels": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object"
        },
        "annotations": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object"
        },
        "ownerReferences": {
          "items": {
            "$ref": "#/$defs/OwnerReference"
          },
          "type": "array"
        },
        "finalizers": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "managedFields": {
          "items": {
            "$ref": "#/$defs/ManagedFieldsEntry"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "OwnerReference": {
      "properties": {
        "apiVersion": {
          "type": "string"
        },
        "kind": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "uid": {
          "type": "string"
        },
        "controller": {
          "type": "boolean"
        },
        "blockOwnerDeletion": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "apiVersion",
        "kind",
        "name",
        "uid"
      ]
    },
    "Permission": {
      "properties": {
        "kind": {
          "type": "string"
        },
        "apiVersion": {
          "type": "string"
        },
        "metadata": {
          "$ref": "#/$defs/ObjectMeta"
        },
        "spec": {
          "$ref": "#/$defs/PermissionSpec"
        },
        "status": {
          "$ref": "#/$defs/PermissionStatus"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "description": "Permission is the Schema for the Mission Control Permission"
    },
    "PermissionObject": {
      "properties": {
        "playbooks": {
          "items": {
            "$ref": "#/$defs/ResourceSelector"
          },
          "type": "array"
        },
        "connections": {
          "items": {
            "$ref": "#/$defs/ResourceSelector"
          },
          "type": "array"
        },
        "configs": {
          "items": {
            "$ref": "#/$defs/ResourceSelector"
          },
          "type": "array"
        },
        "components": {
          "items": {
            "$ref": "#/$defs/ResourceSelector"
          },
          "type": "array"
        },
        "views": {
          "items": {
            "$ref": "#/$defs/ViewRef"
          },
          "type": "array"
        },
        "scopes": {
          "items": {
            "$ref": "#/$defs/NamespacedNameIDSelector"
          },
          "type": "array",
          "description": "Scopes that is expanded onto Selectors"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "PermissionSpec": {
      "properties": {
        "description": {
          "type": "string",
          "description": "Description provides a brief explanation of the permission."
        },
        "actions": {
          "items": {
            "type": "string"
          },
          "type": "array",
          "description": "Actions specify the operation that the permission allows or denies."
        },
        "subject": {
          "$ref": "#/$defs/PermissionSubject",
          "description": "Subject defines the entity (e.g., user, group) to which the permission applies."
        },
        "object": {
          "$ref": "#/$defs/PermissionObject",
          "description": "Object identifies the resource or object that the permission is associated with."
        },
        "deny": {
          "type": "boolean",
          "description": "Deny indicates whether the permission should explicitly deny the specified action.\n\nDefault: false"
        },
        "agents": {
          "items": {
            "type": "string"
          },
          "type": "array",
          "description": "List of agent ids whose configs/components are accessible to a person when RLS is enabled\nDEPRECATED: Use AccessScope CRD instead. This field is ignored.\n+optional"
        },
        "tags": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object",
          "description": "List of config/component tags a person is allowed to access to when RLS is enabled\nDEPRECATED: Use AccessScope CRD instead. This field is ignored.\n+optional"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "actions",
        "subject",
        "object"
      ]
    },
    "PermissionStatus": {
      "properties": {},
      "additionalProperties": false,
      "type": "object"
    },
    "PermissionSubject": {
      "properties": {
        "group": {
          "type": "string",
          "description": "Group is the group name"
        },
        "person": {
          "type": "string",
          "description": "ID or email of the person"
        },
        "team": {
          "type": "string",
          "description": "Team is the team name"
        },
        "notification": {
          "type": "string",
          "description": "Notification \u003cnamespace\u003e/\u003cname\u003e selector"
        },
        "playbook": {
          "type": "string",
          "description": "Playbook \u003cnamespace\u003e/\u003cname\u003e selector"
        },
        "canary": {
          "type": "string",
          "description": "Canary \u003cnamespace\u003e/\u003cname\u003e selector"
        },
        "scraper": {
          "type": "string",
          "description": "Scraper \u003cnamespace\u003e/\u003cname\u003e selector"
        },
        "topology": {
          "type": "string",
          "description": "Topology \u003cnamespace\u003e/\u003cname\u003e selector"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ResourceSelector": {
      "properties": {
        "agent": {
          "type": "string"
        },
        "scope": {
          "type": "string"
        },
        "cache": {
          "type": "string"
        },
        "search": {
          "type": "string"
        },
        "limit": {
          "type": "integer"
        },
        "includeDeleted": {
          "type": "boolean"
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        },
        "tagSelector": {
          "type": "string"
        },
        "labelSelector": {
          "type": "string"
        },
        "fieldSelector": {
          "type": "string"
        },
        "health": {
          "type": "string"
        },
        "types": {
          "$ref": "#/$defs/Items"
        },
        "statuses": {
          "$ref": "#/$defs/Items"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Time": {
      "properties": {},
      "additionalProperties": false,
      "type": "object"
    },
    "ViewRef": {
      "properties": {
        "id": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  }
}